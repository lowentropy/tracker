<p>
  <b>Name:</b>
  <%=h @person.name %>
</p>

<p>
	<b>Day Starts At:</b>
	<%=h @person.first_hour %>
</p>

<p>
  <b>Birth date:</b>
  <%=h @person.birth_date %>
</p>

<p>
	<b>API Key:</b>
	<%=h @person.api_key %>
</p>

<p>
	<b>Stats</b>
	(drag to reorder)

	<% modes = SummaryMode.find(:all) -%>
	<% sort_list(@person, :stats) do |stat| -%>
		<% if stat.visible? -%>
			<b><%=h stat.name.capitalize %></b>
		<% else -%>
			<%=h stat.name.capitalize %>
		<% end -%>
		<%= link_to 'edit', edit_stat_path(stat) %>
		<%= link_to 'del', stat, :confirm => 'Sure?', :method => :delete %>
	<% end -%>
</p>
<%= link_to 'Create new stat', new_stat_path %><br/>

<p>
	<b>Groups</b>
	(drag to reorder)

	<% sort_list(@person, :groups) do |group| -%>
		<%=h group.name.capitalize %>
		<%= link_to 'edit', edit_group_path(group) %>
		<%= link_to 'del', group, :confirm => 'Sure?', :method => :delete %>
	<% end %>
</p>
<%= link_to 'Create new group', new_group_path %><br/>

<%= link_to 'Edit', edit_person_path(@person) %> |
<%= link_to 'Back', people_path %>
