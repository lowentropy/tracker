<h1>New user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </p>

	<p>
		<%= f.label :openid_url %><br />
		<%= f.text_field :openid_url %>
	</p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

