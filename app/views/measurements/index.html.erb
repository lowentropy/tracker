<h1>Logs for <%= link_to @person.name, @person %></h1>
<% table = @person.table -%>

<table class="measurements">
	<tr>
		<th>Day</th>
	<% @person.stats.each do |stat| -%>
		<th><%=h stat.name.capitalize %></th>
	<% end -%>
	</tr>
<% table.each do |day,row| -%>
	<tr>
		<td><%=h day %></td>
	<% row.each_with_index do |measurements,i| %>
		<% unit = @person.person_stats[i].unit -%>
		<td><%= measurements.map {|m| m.display(unit)}.join("<br/>") %></td>
	<% end -%>
	</tr>
<% end -%>
</table>
